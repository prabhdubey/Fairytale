
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup"}) do |f| %>

<h2 class="form-signin-heading">Sign up</h2>

<div class="field">
    <%= f.label :First_Name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First name", required: true %>
  </div>

  <div class="field">
    <%= f.label :Last_Name %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password", required: true %>
  </div>

 <div class="field">
    <%= f.label :Image %><br>
    <%= f.file_field :logo %>
  </div>
  <br>
  <div>
    <label>Image URL:</label>
    <%= f.text_field :remote_logo_url %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" ,class: "btn btn-lg btn-primary btn-block"%>
  </div>
<% end %>

